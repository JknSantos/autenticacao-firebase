<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".FormCadastro">

        <TextView
            android:id="@+id/cadastrese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_cadastro"
            android:textSize="50sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/text_cadastro_nome"
            style="@style/Edit_Text"
            app:layout_constraintTop_toBottomOf="@+id/cadastrese"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="Nome"
            android:inputType="text"/>

        <EditText
            android:id="@+id/text_cadastro_email"
            style="@style/Edit_Text"
            app:layout_constraintTop_toBottomOf="@id/text_cadastro_nome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="Email"
            android:drawableEnd="@drawable/ic_email"
            android:inputType="textEmailAddress"/>

        <EditText
            android:id="@+id/text_cadastro_senha"
            style="@style/Edit_Text"
            app:layout_constraintTop_toBottomOf="@+id/text_cadastro_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="Senha"
            android:drawableEnd="@drawable/ic_visibility"
            android:inputType="textPassword"/>

        <Button
            style="@style/Button"
            app:layout_constraintTop_toBottomOf="@+id/text_cadastro_senha"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/cadastrar"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAllCaps="false"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
